@baseUrl = http://localhost:3000
# To test Render, uncomment and update:
# @baseUrl = https://cse341-project1-lg5n.onrender.com

# Optional manual override (only if you want to paste an id yourself)
@id = 000000000000000000000000

###
# GET all contacts
GET {{baseUrl}}/contacts

###
# GET by id (invalid example â†’ should be 400)
GET {{baseUrl}}/contacts/000000000000000000000000

###
# POST create a new contact
# @name createContact
POST {{baseUrl}}/contacts
Content-Type: application/json

{
  "firstName": "Anthony",
  "lastName": "Christesen",
  "email": "anthony@example.com",
  "favoriteColor": "Green",
  "birthday": "1989-04-16"
}

###
# GET by id (using the id from the POST response)
# Pulls: createContact.response.body.$.id
GET {{baseUrl}}/contacts/{{createContact.response.body.$.id}}

###
# PUT update contact (full replace, uses the POST's id)
PUT {{baseUrl}}/contacts/{{createContact.response.body.$.id}}
Content-Type: application/json

{
  "firstName": "Anthony",
  "lastName": "Christesen",
  "email": "anthony.c@example.com",
  "favoriteColor": "Blue",
  "birthday": "1989-04-16"
}

###
# GET after update
GET {{baseUrl}}/contacts/{{createContact.response.body.$.id}}

###
# DELETE contact (uses the POST's id)
DELETE {{baseUrl}}/contacts/{{createContact.response.body.$.id}}

###
# GET after delete (should be 404)
GET {{baseUrl}}/contacts/{{createContact.response.body.$.id}}
